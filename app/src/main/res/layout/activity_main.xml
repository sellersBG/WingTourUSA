<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">
        tools:context=".MainActivity" android:id="@+id/canvas" android:background="@android:color/background_light">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView2"
            android:layout_weight="1"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/sauce"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/sauce"
                android:textSize="12pt"
                android:layout_alignParentTop="true" tools:layout_marginTop="5dp"
                android:layout_alignParentStart="true" android:layout_marginStart="40dp">
        </TextView>
        <EditText
                android:id="@+id/sauceText"
                android:layout_height="wrap_content"
                android:hint="@string/score"
                android:inputType="numberDecimal"
                android:layout_width="100dp"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/sauce" tools:layout_marginTop="5dp"
                tools:textAlignment="center">
        </EditText>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/meat"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/meat"
                android:textSize="12pt"
                android:layout_alignParentTop="true" tools:layout_marginTop="5dp"
                android:layout_alignParentStart="true" android:layout_marginStart="40dp">
        </TextView>
        <EditText
                android:id="@+id/meatText"
                android:layout_height="wrap_content"
                android:hint="@string/score"
                android:inputType="numberDecimal"
                android:layout_width="100dp"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/meat" tools:layout_marginTop="5dp"
                tools:textAlignment="center">
        </EditText>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/appearance"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/appearance"
                android:textSize="12pt"
                android:layout_alignParentTop="true" tools:layout_marginTop="5dp"
                android:layout_alignParentStart="true" android:layout_marginStart="40dp">
        </TextView>
        <EditText
                android:id="@+id/appearanceText"
                android:layout_height="wrap_content"
                android:hint="@string/score"
                android:inputType="numberDecimal"
                android:layout_width="100dp"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/appearance" tools:layout_marginTop="5dp"
                tools:textAlignment="center">
        </EditText>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/cook"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/cook"
                android:textSize="12pt"
                android:layout_alignParentTop="true" tools:layout_marginTop="5dp"
                android:layout_alignParentStart="true" android:layout_marginStart="40dp">
        </TextView>
        <EditText
                android:id="@+id/cookText"
                android:layout_height="wrap_content"
                android:hint="@string/score"
                android:inputType="numberDecimal"
                android:layout_width="100dp"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/cook" tools:layout_marginTop="5dp"
                tools:textAlignment="center">
        </EditText>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/kick"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/kick"
                android:textSize="12pt"
                android:layout_alignParentTop="true" tools:layout_marginTop="5dp"
                android:layout_alignParentStart="true" android:layout_marginStart="40dp">
        </TextView>
        <EditText
                android:id="@+id/kickText"
                android:layout_height="wrap_content"
                android:hint="@string/score"
                android:inputType="numberDecimal"
                android:layout_width="100dp"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/kick" tools:layout_marginTop="5dp"
                tools:textAlignment="center">
        </EditText>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:text="Calculate"
                android:layout_width="wrap_content"
                android:id="@+id/button" android:layout_weight="1" android:layout_height="wrap_content"
                tools:layout_marginTop="10dp" tools:layout_marginBottom="10dp" tools:padding="20dp"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>