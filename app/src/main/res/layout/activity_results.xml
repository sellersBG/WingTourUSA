<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true" android:layout_marginTop="20dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" android:id="@+id/logo"
            android:background="@drawable/logo" tools:contentDescription="Wing tour USA logo"/>


    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:id="@+id/saucel">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/black_circle"
                android:id="@+id/circlesauce"
                tools:contentDescription="Sauce Score"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circlesauce" android:id="@+id/sauces" tools:textSize="50dp"
                tools:lineHeight="50dp" android:gravity="bottom"/>
        <TextView
                android:text="auce"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_toEndOf="@+id/sauces"
                android:id="@+id/textauce" android:layout_alignBottom="@id/sauces" tools:textSize="25dp"
                tools:lineHeight="50dp" android:gravity="bottom" tools:paddingBottom="6dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_below="@id/saucel" android:id="@+id/meatl">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/black_circle"
                android:id="@+id/circlemeat"
                tools:contentDescription="Meat Score" android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:text="M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circlemeat" android:id="@+id/meatm" tools:textSize="50dp"
                android:layout_centerInParent="true"/>

        <TextView
                android:text="eatiness"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_toEndOf="@+id/meatm"
                android:id="@+id/texteatiness" android:layout_alignBottom="@id/meatm" tools:textSize="25dp"
                tools:lineHeight="50dp" android:gravity="bottom" tools:paddingBottom="6dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:id="@+id/appearancel" android:layout_below="@id/meatl">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/black_circle"
                android:id="@+id/circleappearance"
                tools:contentDescription="Appearance Score" android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
        <TextView
                android:text="A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circleappearance" android:id="@+id/appearancea" tools:textSize="50dp"
                android:layout_centerInParent="true"/>

        <TextView
                android:text="ppearance/aroma"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_toEndOf="@+id/appearancea"
                android:id="@+id/textppearance" android:layout_alignBottom="@id/appearancea" tools:textSize="25dp"
                tools:lineHeight="50dp" android:gravity="bottom" tools:paddingBottom="6dp"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:id="@+id/cookl" android:layout_below="@id/appearancel">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/black_circle"
            android:id="@+id/circlecook"
            tools:contentDescription="Cook Score" android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>
        <TextView
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circlecook" android:id="@+id/cookc" tools:textSize="50dp"
                android:layout_centerInParent="true"/>

        <TextView
                android:text="ook/texture"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_toEndOf="@+id/cookc"
                android:id="@+id/textook" android:layout_alignBottom="@id/cookc" tools:textSize="25dp"
                tools:lineHeight="50dp" android:gravity="bottom" tools:paddingBottom="6dp"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:id="@+id/kickl" android:layout_below="@id/cookl">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/black_circle"
            android:id="@+id/circlekick"
            tools:contentDescription="Kick Score" android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>
        <TextView
                android:text="K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circlekick" android:id="@+id/kickk" tools:textSize="50dp"
                android:layout_centerInParent="true"/>

        <TextView
                android:text="ick/flavor"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_toEndOf="@+id/kickk"
                android:id="@+id/textick" android:layout_alignBottom="@id/kickk" tools:textSize="25dp"
                tools:lineHeight="50dp" android:gravity="bottom" tools:paddingBottom="6dp"/>

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="167dp"
                    android:id="@+id/shadows" android:layout_below="@id/kickl">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp" app:srcCompat="@drawable/person1"
                android:id="@+id/person1"
                android:layout_alignParentBottom="true" android:layout_toLeftOf="@id/person2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="110dp" app:srcCompat="@drawable/person2"
            android:id="@+id/person2" android:layout_toLeftOf="@id/person3"
            android:layout_alignParentBottom="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp" app:srcCompat="@drawable/person3"
                android:id="@+id/person3"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp" app:srcCompat="@drawable/person4"
                android:id="@+id/person4" android:layout_toRightOf="@id/person3"
                android:layout_alignParentBottom="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp" app:srcCompat="@drawable/person5"
                android:id="@+id/person5" android:layout_toRightOf="@id/person4"
                android:layout_alignParentBottom="true"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/horizontall" android:layout_alignParentBottom="true">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="60dp" app:srcCompat="@drawable/horizontal_logo"
                android:id="@+id/horizontal_logo"/>
    </RelativeLayout>


</RelativeLayout>